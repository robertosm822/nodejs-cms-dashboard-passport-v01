// Pre-loader start
.theme-loader
  .loader-track
    .loader-bar
// Pre-loader end
section.login.p-fixed.d-flex.text-center.bg-primary.common-img-bg
  // Container-fluid starts
  .container
    .row
      .col-sm-12
        // Authentication card start
        .login-card.card-block.auth-body.mr-auto.ml-auto
          form.md-float-material(action='/auth/login', method='post')
            .text-center
              img(src='images/logo.png', alt='logo.png')
            .auth-box
              .row.m-b-20
                .col-md-12
                  h3.text-left.txt-primary ENTRAR NO SISTEMA
              hr
              .input-group
                input.form-control(type='text', name='username', placeholder='NOME DE USU√ÅRIO')
                span.md-line
              .input-group
                input.form-control(type='password', name='password', placeholder='SENHA')
                span.md-line
              .row.m-t-25.text-left
                .col-sm-7.col-xs-12
                  .checkbox-fade.fade-in-primary
                    label
                      input(type='checkbox', value='')
                      span.cr
                        i.cr-icon.icofont.icofont-ui-check.txt-primary
                      span.text-inverse Remember me
              .row.m-t-30
                .col-md-12
                  button.btn.btn-primary.btn-md.btn-block.waves-effect.text-center.m-b-20(type='submit') ENTRAR
              hr
          // end of form
        // Authentication card end
      // end of col-sm-12
    // end of row
  // end of container-fluid
